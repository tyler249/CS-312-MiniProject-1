<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/styles/main.css">
  <title>My Blog</title>
</head>
<body>
  <h1>Welcome to the Blog!</h1>

  <a href="/create"><button>Create Blog Post</button></a>

  <% if (posts.length === 0) { %>
    <p>No posts yet...</p>
  <% } else { %>
    <ul>
      <% posts.forEach(post => { %>
        <li>
          <h2><%= post.title %></h2>
          <p><%= post.body %></p>
          <h4>Post by: <%= post.name %></h4>
          <small>Created at: <%= post.createdAt.toLocaleString() %></small>
          <br>
          <a href="/edit/<%= post.id %>"><button>Edit</button></a>
          <form action="/delete/<%= post.id %>" method="POST" style="display: inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>
